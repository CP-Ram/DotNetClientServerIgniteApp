<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
  <!--
        Alter configuration below as needed.
    -->
  <bean id="grid.cfg" class="org.apache.ignite.configuration.IgniteConfiguration">

    <!-- <property name="gridLogger">
      <bean class="org.apache.ignite.logger.log4j.Log4JLogger">
        <constructor-arg type="java.lang.String" value="ignite-log4j-client.xml"/>
      </bean>
    </property>-->

    <property name="igniteInstanceName" value="ClientNode"/>
    <property name="peerClassLoadingEnabled" value="false"/>

    <!-- Enabling Apache Ignite Persistent Store. -->
    <property name="dataStorageConfiguration">
      <bean class="org.apache.ignite.configuration.DataStorageConfiguration">
        <property name="storagePath" value="C:\client\storage" />
        <property name="walPath" value="C:\client\wal" />
        <property name="walArchivePath" value="C:\client\walArchive" />

        <property name="defaultDataRegionConfiguration">
          <bean class="org.apache.ignite.configuration.DataRegionConfiguration">
            <property name="name" value ="IgniteDataRegion"/>
            <!-- Enable metrics for this data region  -->
            <property name="metricsEnabled" value="true"/>
          </bean>
        </property>
      </bean>
    </property>

    <property name="workDirectory" value="C:\client\work" />

    <!-- Explicitly configure TCP discovery SPI to provide list of initial nodes. -->
    <property name="discoverySpi">
      <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
        <property name="ipFinder">
          <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
            <property name="addresses">
              <list>
                <value>localhost:47500..47530</value>
              </list>
            </property>
          </bean>
        </property>
        <property name="socketTimeout" value="200000" />
      </bean>
    </property>

    <property name="communicationSpi">
      <bean class="org.apache.ignite.spi.communication.tcp.TcpCommunicationSpi">
        <!-- Override local port. -->
        <property name="localPort" value="47100"/>
        <property name="socketWriteTimeout" value="5000" />
      </bean>
    </property>


    <property name="failureDetectionTimeout" value="20000"/>

    <property name="failureHandler">
      <bean class="org.apache.ignite.failure.NoOpFailureHandler">
      </bean>
    </property>
  </bean>

</beans>
